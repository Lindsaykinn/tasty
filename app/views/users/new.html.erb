<h3>Signup</h3>

<%= form_for @user, url: signup_path do |f| %>
<div class="input-field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="input-field">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>
<div class="input-field">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<%= f.submit "Signup", class: "custom_button" %>
<% end %>