
<h4><%= @recipe.title %></h4>

<div class="container" style="margin-left:35px;">

  <h5 style="font-size:1.45rem"> ● Category:</h5>
    <ul>
      <li style="margin-left:20px;"><%= link_to @category, category_path %></li>
    </ul>

  <h5 style="font-size:1.45rem">● Description:</h5>
    <ul>
      <li style="margin-left:20px;"><%= @recipe.description %></li>
    </ul>
  
  <h5 style="font-size:1.45rem">● Ingredients:</h5>
    <ul style="margin-left:25px;">
        <% if has_data @recipe.ingredients %>
          <% @recipe.recipe_ingredients.each do |ri| %>
          <%= ri.ingredient.measurement %>
          <%= ri.ingredient.ingredient_name %>
          <% end %>
        <% end %>
    </ul>

  <h5 style="font-size:1.45rem">● Instructions:</h5>
    <ol>
      <% for @instruction in @recipe.instructions %>
        <li><%= @instruction.step %></li>
        <% end %>    
    </ol>

<br>

  <h5 style="font-size:1.45rem">● Recipe Comments:</h5>
    <div style="margin-left:25px;">
      <%= render partial: 'comments/comments_list', locals: {comments: @recipe.comments, recipe: @recipe} if @recipe.comments %>
  
    </div>

<br>
  <div>
    <h5>Add Recipe Comments:</h5>
      <%= render 'comments/form', comment: @recipe.comments.new, recipe: @recipe %>   
  </div>

  <br>
  <br>

<div>
<%= link_to "Edit Recipe", edit_recipe_path(@recipe), class:"custom_button" %>
<%= link_to "Delete Recipe", recipe_path(@recipe), method: "delete", class:"custom_button"%>
</div>


