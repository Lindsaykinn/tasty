<h3>All Recipes</h3>

<!--form_tag builds a simple form in HTML using the path we pass it, method should be specified -->
<%= form_tag recipes_path, :method => "get" do %>
  <%= label_tag(:q, "Search All Recipes:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search", class: "custom_button") %>
<% end %>

<ul>
  <%@recipes.each do |recipe| %>
  <li><%= link_to recipe.title, recipe_path(recipe) %> by <%= recipe.user.name %> - Instructions count: <%=recipe.instructions.count%>
  <% end %>
</ul>

