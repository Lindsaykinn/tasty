<h3>Login</h3>

<%= form_tag login_path %>
  <div class="input-field">
    <%= email_field_tag :email, nil, autofocus: true %>
    <%= label_tag :email %>
  </div>

  <div class="input-field">
    <%= password_field_tag :password, nil %>
    <%= label_tag :password%>
  </div>

  <%= submit_tag "Login", class: "custom_button" %>&nbsp; OR &nbsp; <%= link_to "Go To Sign Up", signup_path, class: "custom_button" %>
